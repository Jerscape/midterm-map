<!-- This is the homepage -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <!-- <link rel="stylesheet" href="/styles/layout.css" /> -->

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script
      async
      src="https://maps.googleapis.com/maps/api/js?key=<%= apiKey %>&callback=initMap"
    ></script>
    <script defer src="/scripts/app.js"></script>
    <script defer src="/scripts/maps.js"></script>


    <!-- A temporary internal css styling. Will be moved to a scss stylesheet later-->
    <style>
      nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #6477b9;
        color: white;
        height: 120px;
        width: 100%;
        position: fixed;
        top: 0;
        z-index: 1000;
        padding: 0px 40px;
      }

      #maps-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        padding-right: 40px;
      }

      #map-screen {
        display: flex;
        justify-content: center;
        margin: 50px 0px 50px 40px;
      }

      h2{
        padding-top: 200px;
        padding-left: 40px;
        margin: 0px;
      }

      #map-display {
        display: flex;
        flex-direction: column;
        width: 70%;
        height: 700px;
        z-index: 999;
      }

      #fav-button {
        margin-bottom: 10px;
        height: 40px;
        width: 150px;
      }


      #locs-container {
        height: 100%;
        width: 100%;
      }

      .nav-links {
        display: flex;
        flex-direction: row;
        align-items: center;
      }

    </style>
  </head>

  <body>
    <header>
      <nav>
        <h1>Wiki Map</h1>
        <div class="nav-links">
          <a href="/maps/create">Create Map</a>
          <span style="margin: 10px"> <a href="/favs">My Favourites</a> </span>

          <% if (userId) { %>

            <form action="/logout" method="POST">
              <span class="nav-item" style="margin: 10px"> Logged in as: <%= username %> </span>
              <button type="submit" name="Logout">Logout</button>
            </form>



            <% } %>

        </div>
      </nav>


      <h2> List of Available Maps </h2>


    </header>

    <div id="map-screen">
      <div id="maps-container"></div>
      <div id="map-display">

        <div id="button-container"></div>

        <div id="locs-container"></div>

      </div>

    </div>

  </body>
</html>
